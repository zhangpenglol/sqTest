body {
  height: 100%;
  -moz-osx-font-smoothing: grayscale;
  -webkit-font-smoothing: antialiased;
  text-rendering: optimizeLegibility;
  font-family: PingFang SC-中等, PingFang SC;
}

html,
body {
  height: 100%;
  box-sizing: border-box;
}

#app {
  height: 100%;
}

*,
*:before,
*:after {
  box-sizing: inherit;
}

a:focus,
a:active {
  outline: none;
}

a,
a:focus,
a:hover {
  cursor: pointer;
  color: inherit;
  text-decoration: none;
}

//卡片背景
.card_box {
  background: #FFFFFF;
  box-shadow: 2px 0px 10px 1px rgba(0, 13, 70, 0.10000000149011612);
  border-radius: 2px 2px 2px 2px;
  opacity: 1;
}