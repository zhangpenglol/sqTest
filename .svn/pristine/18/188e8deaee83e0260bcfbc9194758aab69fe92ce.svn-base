@import url('./amend-element-ui.css');
*{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
 
}
.container-search{  //layout的main区域的搜索条件区域
  margin-bottom: 24px;
  padding: 12px 24px;
  background-color: #ffff;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 0 4px  rgba(0,13,70,0.1);
  .iconfont{   
    font-size: 12px;
  }

}
.container-main{  //表格的主体区域
  background-color: #ffff;
  padding: 24px;
  box-shadow: 0 0 4px  rgba(0,13,70,0.1);
}
.table-handles{  //表格上的操作栏
  margin-bottom: 24px;
  .iconfont{   
    font-size: 12px;
  }
  .icon-shanchu{ //删除的额外坐下调整
    font-size: 14px;
  }
}
.iconfont {  //字体图标的样式
  font-weight: normal;
  font-size: inherit;
  margin-right: 5px;
}

/*
*表格中操作栏的表头样式
*
*/
.table-caozuo{
  color: #3757E2;
}
.table-caozuo span{
  margin-right: 8px;
}

/*
*删除的文本按钮
*/ 
.delete-icon{
  color:rgb(255, 67, 67)
}
.delete-icon:hover{
  color:rgba(255, 67, 67,0.7)
}